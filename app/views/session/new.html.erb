<div class="container">
  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
      <h2> Please enter your login details </h2>
      <%= form_tag '/login' do %>
      
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= label_tag 'email', 'Email', :class => 'mdl-textfield__label'%>
        <%= text_field_tag 'email','', :class => 'mdl-textfield__input' %>
      </div>
      <br>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= label_tag 'password', 'Password', :class => 'mdl-textfield__label'%>
        <%= password_field_tag 'password', '', :class =>'mdl-textfield__input'%>
      </div>
      <br>
      <br>
      <div>
        <%= button_tag 'Login', :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored' %>
      </div>

      <% end %>
      <div class="test">
        <h4>Test Account</h4>
        <p>username: test@site.com</p>
        <p>password: password</p>
      </div>
    </div>
  </div>
</div>




